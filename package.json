{
  "name": "skatl-express",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npx tsx watch src/app.ts",
    "build": "tsc",
    "start": "npx ts-node --esm --transpile-only src/index.ts",
    "migration:generate": "npx ts-node --esm node_modules/typeorm/cli.js migration:generate src/migration/ -d ormconfig.json",
    "migration:run": "npx ts-node --esm node_modules/typeorm/cli.js migration:run -d ormconfig.json",
    "migration:revert": "npx ts-node --esm node_modules/typeorm/cli.js migration:revert -d ormconfig.json"
  },
  "dependencies": {
    "express": "^4.17.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
